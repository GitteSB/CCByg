<Page
    x:Class="CCByg.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CCByg"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel HorizontalAlignment="Left" Height="1000" Margin="0,0,0,0" VerticalAlignment="Top" Width="200">

            <Button Content="Hjem" HorizontalAlignment="Stretch" Margin="20,75,20,0" VerticalAlignment="Stretch" Height="50" Click="Button_Click"/>


            <Button Content="Lager" HorizontalAlignment="Stretch" Margin="20,100,20,0" VerticalAlignment="Stretch" Height="50" Click="Button_Click">

                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Opret" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Rediger" Margin="20,0,20,10"></MenuFlyoutItem>
                    </MenuFlyout>

                </Button.Flyout>
            </Button>

            <Button Content="Projekter" HorizontalAlignment="Stretch" Margin="20,150,20,0" VerticalAlignment="Stretch" Height="50" Click="Button_Click">

                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Opret" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Opdater" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Luk" Margin="20,0,20,10"></MenuFlyoutItem>

                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Medarbejdere" HorizontalAlignment="Stretch" Margin="20,150,20,0" VerticalAlignment="Stretch" Height="50" Click="Button_Click">

                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Kartotek" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Tilføj" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Rediger" Margin="20,0,20,10"></MenuFlyoutItem>
                        <MenuFlyoutItem Text="Fjern" Margin="20,0,20,10"></MenuFlyoutItem>
                    </MenuFlyout>

                </Button.Flyout>
            </Button>

        </StackPanel>
        <Grid HorizontalAlignment="Stretch" Height="200" Margin="200,0,0,0" VerticalAlignment="Top">

        </Grid>
        <Grid HorizontalAlignment="Left" Height="800" Margin="200,200,0,0" VerticalAlignment="Bottom" Width="1300">

            <TextBox HorizontalAlignment="Center"  Text="Update-feed" VerticalAlignment="Top" Height="300" Width="600" Margin="0,400,0,0"/>


        </Grid>


    </Grid>
</Page>